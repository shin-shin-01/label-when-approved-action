{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "esModuleInterop": true ,
  },
  "include": [
    "src/**/*",
    "*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
