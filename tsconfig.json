{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
